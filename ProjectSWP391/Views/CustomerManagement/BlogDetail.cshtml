@using ProjectSWP391.Models;
@model Blog

@{
    if (Global.CurrentUser != null && (Global.CurrentUser.Role == 1 || Global.CurrentUser.Role == 2))
    {
        Layout = "_AdminLayout";
    }
}
<div class="container" style="padding: 50px 0 0 0">
    <div style="padding: 10px 10px 30px 10px; width: 32.20339%; float: left; margin-right: 1.69492%;">
        <div style="max-width: 180px; padding: 0 0 30px 0; border-bottom: 0.5px solid black;">
            <img src="/image/brand_logo.png" style="width: 60%; height: auto; border-radius: 50%; margin-bottom: 15px; background-color: black; border: 3px solid darkgoldenrod" />
            <h4>SB Blogs</h4>
            <p style="margin-bottom: 15px; font-size: 15px; color: dodgerblue; text-decoration: underline;">@@Sblogs</p>
            <p style="font-size: 15px; color: #b2c3cb;">Let our stories guide you</p>
        </div>
        <div style="padding: 30px 0 0 0; max-width: 180px;">
            <p style="font-size: 15px; color: #b2c3cb; margin-bottom: 15px; font-weight: bold;">Only on Smart Beauty</p>
            <p style="font-size: 15px; color: dodgerblue; text-decoration: underline;">#SmartBeauty</p>
        </div>
    </div>

    <div class="content-area" style="padding: 0 10px 80px 10px; width: 49.15254%; float: left; margin-right: 1.69492%; overflow-x: hidden;">
        <div style="padding: 0px 0 10px 0">
            <h1>@Model.Title</h1>
        </div>
        <div style="padding: 10px 0 30px 0; font-size: 15px; color: #b2c3cb">
            <p>By <span style="text-decoration: underline; color: dodgerblue;">@Model.Account.FullName</span></p>
            @*<p>@Model.BlogDate.ToString("dd/MM/yyyy");</p>*@
        </div>
        <div style="padding: 10px 0 10px 0; font-size: 15px;">
            @Html.Raw(Model.Content)
        </div>
    </div>
    <div style="width: 15.25424%; float: left; margin-right: 1.69492%;"></div>
</div>

<style>
    p, h1, h4 {
        margin-bottom: 0;
    }

    .content-area img {
        width: 100%;
        height: auto;
        object-fit: contain;
    }
</style>
