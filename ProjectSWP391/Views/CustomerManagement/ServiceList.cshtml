@using ProjectSWP391.Models
@model List<Service>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Services</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/ProductList.css" rel="stylesheet" />
</head>
<body>
    <!-- Header-->
    <header class="bg-dark py-4 mt-2">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Service</h1>
                <p class="lead fw-normal text-white-50 mb-0">You can book for best quality services here!</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">
                @if (Model.Count == 0)
                {
                    <p class="text-center">No service found!</p>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <div class="col mb-5" style="z-index: 0;">
                            <a href="/ServiceManagement/Details?id=@item.ServiceId" style="text-decoration: none;">
                                <div class="card h-100" style="flex-direction: unset; align-content: space-between; flex-wrap: wrap; justify-content: center; border: 1px solid #f7f7f7;">
                                    <!-- Product image-->
                                    @{
                                        if(item.Image == null)
                                        {
                                            <img class="card-img-top border-bottom" style="height: 300px;" src="/image/brand_logo.png" alt="..." />
                                        }
                                        else
                                        {
                                            <img class="card-img-top border-bottom" style="height: 300px;" src="@item.Image" alt="@item.ServiceName" />
                                        }
                                    }
                                    <!-- Product details-->
                                    <div class="card-body p-4" style="min-height: 100px;">
                                        <div class="text-center">
                                            <!-- Product name-->
                                            <div style="height: 70px; overflow: hidden; text-overflow: ellipsis; white-space: pre-line;">
                                                <h6 class="fw-bolder text-dark text-start">@item.ServiceName</h6>
                                            </div>
                                            <!-- Product price-->
                                            <div style="min-height: 30px;padding-top: 15px;">
                                                <span class="text-danger">$@(Math.Round(item.Price, 2))</span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Product actions-->
                                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent mb-3">
                                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Booking/Load?sID=@item.ServiceId">Book Now</a></div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
</body>
</html>

