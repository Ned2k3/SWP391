@using ProjectSWP391.Models
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Products</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/ProductList.css" rel="stylesheet" />
</head>
<body>
    <style>
        .card:hover 
        {
            box-shadow: 0 0 5px 2px rgb(197,192,192,0.8);
        }
    </style>
    <!-- Header-->
    <header class="bg-dark py-4 mt-2">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Products </h1>
                <p class="lead fw-normal text-white-50 mb-0">You can get high-end beauty products here!</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-2 row-cols-xl-4 justify-content-start">
                @if (Model.Count == 0)
                {
                    <p>There is no product found!</p>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <div class="col mb-5 " >
                            <a href="/ProductManagement/Details?id=@item.ProductId" style="text-decoration: none;">
                                <div class="card h-100" style="flex-direction: unset; align-content: space-between; flex-wrap: wrap; justify-content: center; border: 2px solid #f7f7f7;">
                                    <!-- Product image-->
                                    @{
                                        if (item.Image == null)
                                        {
                                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                                            
                                        }
                                        else
                                        {
                                            <img class="card-img-top" src="@item.Image" alt="@item.ProductName" />
                                        }
                                    }
                                    <!-- Product details-->
                                    <div class="card-body p-4" style="min-height: 100px; margin-top: 0px;">
                                        <div class="text-center">
                                            <!-- Product name-->
                                            <div style="height: 70px; overflow: hidden; text-overflow: ellipsis; white-space: pre-line">
                                                <h6 class="fw-bolder text-dark text-start">@item.ProductName</h6>
                                            </div>
                                            <!-- Product price-->
                                            <div style="min-height: 30px;padding-top: 15px;">
                                                <span class="text-danger">$@(Math.Round(item.Price,2))</span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Product actions-->
                                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent mb-3">
                                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Booking/Load?sID=@item.ProductId">Buy</a></div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
            <!-- paging here -->
            @*@Html.PagedListPager(Model, page => Url.Action("ProductList", new { page }),
            new PagedListRenderOptions
            {
            DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded, // Display link to the first page if needed
            DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded, // Display link to the last page if needed
            LinkToFirstPageFormat = "<<", // Custom format for the link to the first page
            LinkToLastPageFormat = " >>", // Custom format for the link to the last page
            LinkToPreviousPageFormat = "< ", // Custom format for the link to the previous page
            LinkToNextPageFormat = " >", // Custom format for the link to the next page
            MaximumPageNumbersToDisplay = 3, // Maximum number of page numbers to display
            DisplayEllipsesWhenNotShowingAllPageNumbers = false, // Display ellipses when not showing all page numbers
            ContainerDivClasses = new[] { "pagination" }, // CSS classes for the container div
            UlElementClasses = new[] { "pagination-list" }, // CSS classes for the <ul> element
            LiElementClasses = new[] { "page-item" }, // CSS classes for each <li> element
            })*@
            <div class="row">
                <div class="pagination">
                    @if (Model.PageCount > 1)
                    {
                        <ul class="pagination-list">
                            <li class="page-item fw-bold text-primary">@Html.ActionLink("First","ProductList",new { page = 1, Model.PageSize})</li>
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item fw-bold">@Html.ActionLink("<", "ProductList", new { page = Model.PageNumber - 1, Model.PageSize })</li>
                            }

                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">@Html.ActionLink(i.ToString(), "ProductList", new { page = i, Model.PageSize })</li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item fw-bold">@Html.ActionLink(">", "ProductList", new { page = Model.PageNumber + 1, Model.PageSize })</li>
                            }
                            <li class="page-item fw-bold text-primary">@Html.ActionLink("Last","ProductList",new { page = Model.PageCount, Model.PageSize})</li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </section>
    <style>
        .pagination{
            display: flex;
            flex-direction: row;
            justify-content: center;
        }
        .pagination-list{
            display: inherit;
            width: fit-content;
            list-style: none;
        }
        .page-item{
            min-width: 20px;
            margin-left: 10px;
            margin-right: 10px;
        }
        .page-item a{
            text-decoration: none;
            color: black;
        }
        .page-item.active a{
                color: #756DC7;
        }
     </style>
</body>
</html>

