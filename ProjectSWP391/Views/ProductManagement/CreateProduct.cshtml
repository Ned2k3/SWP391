@model ProjectSWP391.DTOs.ProductDTO

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "_AdminLayout";
}

<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<h1>CreateProduct</h1>

<hr />
<div style="width: 60%;">
    <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
        <div class="form-group">
            <label asp-for="ProductName" class="control-label"></label>
            <input asp-for="ProductName" class="form-control" maxlength="30" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" maxlength="12" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" maxlength="4" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group" style="display:none">
            <label asp-for="IsActive" class="control-label"></label>
            <input asp-for="IsActive" class="form-control" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PcategoryId" class="control-label"></label>
            <select asp-for="PcategoryId" class="form-control" asp-items="ViewBag.PcategoryId"></select>
        </div>
        <div class="form-group" style="margin: 10px 0 10px 0">
            <label asp-for="Image" class="control-label"></label>
            <input type="file" id="imageInput" name="Image" asp-for="Image" accept="image/*" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" style="margin-top: 10px;" />
        </div>
        
    </form>
</div>
<script>
    var fileToUpload = null;
    $('#imageInput').change(function () {
        fileToUpload = $(this)[0].files[0];
        var reader = new FileReader();

        reader.onload = function (e) {
            $('#avatarContainer').prop('src', e.target.result);
        };

        if (fileToUpload) {
            reader.readAsDataURL(fileToUpload);
        }
    });
</script>
<div>
    <a asp-action="ProductList">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
