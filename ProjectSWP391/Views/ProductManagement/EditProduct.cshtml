@model ProjectSWP391.DTOs.ProductDTO
@{
    ViewData["Title"] = "DashBoard";
    Layout = "_AdminLayout";
}

<h1>EditProduct</h1>

<hr />
<div style="width: 100%;">
        <form asp-action="EditProduct" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="IsActive" class="control-label"></label>
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PcategoryId" class="control-label"></label>
                <select asp-for="PcategoryId" class="form-control" asp-items="ViewBag.PcategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" style="margin-top: 10px;"/>
            </div>
        </form>
</div>

<div>
    <a asp-action="ProductList" class="back-button"><i class="fa-solid fa-angle-left"></i> Back</a>
</div>
<style>
    form{
        width: 80%;
        margin-left: 10%;
    }
    input{
        width: fit-content;
        padding: 10px;
    }

    .back-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #e0e0e0;
        color: #333;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .back-button:hover {
            background-color: #ccc;
        }
</style>