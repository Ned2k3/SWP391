@model IEnumerable<ProjectSWP391.Models.Account>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Manager</title>
</head>

<body>
    <div id="wrapper">
        <div id="header">
            <h3>Smart Beauty</h3>
        </div>
        <!-- end header -->
        <div id="wp-content">
            <div id="sidebar">
                <ul>
                    <li><a href="/StaffAccount/Index">Staff</a></li>
                    <li><a href="/CustomerAccount/Index">Customer</a></li>
                    <li><a href="/Product/Index">Product</a> </li>
                    <li><a href="#">Service</a></li>
                    <li><a href="#">Blog</a></li>
                </ul>
            </div>
            <div id="content">
                <div id="wpc-search">
                    <input type="search" class="search-input" placeholder="Search..." />
                </div>
                <div>
                    <a asp-action="Create">Add new Customer</a>
                </div>
                <div id="detailContent">
                    <table border="1px black">
                        <thead>
                            <tr>
                                <th>
                                    FullName
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Phone
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Active
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in Model)
                            {
                                <tr>
                                    <td>@account.FullName</td>
                                    <td>@account.Email</td>
                                    <td>@account.Phone</td>
                                    <td>
                                        <img src="@account.Image" style="width:120px; height=120px">
                                    </td>
                                    <td>@(account.IsActive)</td>
                                    <td>
                                        <a href="#">Edit</a> |
                                        <a href="#">Details</a> |
                                        <a href="#">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!-- end content -->
        <div id="footer">
            <p>Copyright &copy; by Smart Beaty</p>
        </div>
        <!-- end footer -->
    </div>
</body>
<!-- #region Style -->
<style>
    #wrapper {
        width: 960px;
        margin: 0px auto;
    }

    #header {
        background: #f5f5f5;
        text-align: center;
    }

    #wp-content {
        display: flex;
        min-height: 650px;
    }

    .search-input {
        width: 400px;
    }

    #wp-content table {
        margin: 20px 0px;
        width: 100%;
    }

    th, td {
        text-align: center;
    }

    #sidebar {
        flex-basis: 29%;
    }

        #sidebar ul {
            padding-top: 10px;
        }

        #sidebar li {
            padding-top: 15px;
            list-style: none;
            text-align: center;
        }

            #sidebar li:hover {
                background-color: aqua;
            }


            #sidebar li:active {
                background-color: blue;
            }

        #sidebar a {
            text-decoration: none;
            color: black;
            text-align: center;
            font-size: 24px;
        }

    #content {
        flex-basis: 70%;
    }

    table thead tr th {
        border: 1px solid black;
        background-color: #f0bf4e;
        margin: 15px 15px;
    }

    table tbody tr td {
        border: 1px solid black;
        background-color: #f5f5f5;
        margin: 15px 15px;
    }

    #footer {
        background: gray;
        padding: 15px 0px;
        text-align: center;
    }
</style>

</html>