@using ProjectSWP391.Models.ServiceModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectSWP391.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light header border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="CustomerManagement" asp-action="LandingPage"><span style="color: cyan; font-weight: bold; font-size: 30px;">Smart Beauty</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav nav-pills left_nav">
                        <li class="nav-item flex-grow-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="CustomerManagement" asp-action="ProductList">Product</a>
                        </li>
                        <li class="nav-item flex-grow-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="CustomerManagement" asp-action="ServiceList">Service</a>
                        </li>
                        <li class="nav-item flex-grow-1">
                            <a class="nav-link text-white" asp-area="" asp-controller="CustomerManagement" asp-action="BlogList">Blog</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-pills justify-content-end flex-row-reverse right_nav">
                        @{
                            var x = Global.CurrentUser;
                            if (x == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" role="button" asp-area="" asp-controller="Authentication" asp-action="Register">Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" role="button" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                                </li>

                            }
                            else
                            {
                                <li class="nav-item dropdown" style="margin-right: 8%; width: fit-content;">
                                    <a style="margin-right: 8%; text-decoration: none; color: cyan;" href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button" aria-expanded="false">@x.Email <span class="caret"></span></a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li class="dropdown-item" style="text-decoration: none;"><a href="#">Profile</a></li>
                                        <li class="dropdown-item" style="text-decoration: none;"><a asp-controller="Authentication" asp-action="Logout">Sign Out</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer" style="text-align: center; background: #242526;">
        <p style="color: white;">Create By <span style="color: cyan; text-decoration: underline;">SWP391 - Team 5</span></p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
