@{
    Layout = "_AdminLayout";
}
@model Account

<style>
    /* Table styling code */

    form {
        width: 90%;
        padding-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="tel"] {
        width: 100%;
        padding: 6px;
        margin-bottom: 10px;
        border: none;
        border-bottom: 2px solid green;
    }

    select {
        width: fit-content;
        margin-right: 30px;
    }

    input[type="submit"] {
        margin-top: 15px;
        color: black;
        padding: 10px 16px;
        border: none;
        border-bottom: 2px solid lightgreen;
        outline: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            border: none;
            background-color: lightgreen;
            color: white;
        }

    .back-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #e0e0e0;
        color: #333;
        text-decoration: none;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
        position: absolute;
        left: 4%;
    }

        .back-button:hover {
            background-color: #ccc;
        }
</style>

<div style="width: 100%; display: flex; padding: 30px 0 50px 0; justify-content: center; position: relative;">
    <a href="/AccountManagement/AccountList" class="back-button"><i class="fa-solid fa-angle-left"></i> Back</a>
    <h2>Update Account</h2>
</div>

<form method="post" action="/AccountManagement/Update">
    <input type="hidden" name="AccountId" value="@Model.AccountId">

    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" value="@Model.Email" required>
    </div>

    <div>
        <label for="password">Password:</label>
        <input type="text" id="password" name="Password" value="@(EncryptionHelper.Decrypt(Model.Password))" required>
    </div>
    
    <div>
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="Phone" value="@Model.Phone">
    </div>
    
    <div>
        <label for="fullName">Full Name:</label>
        <input type="text" id="fullName" name="FullName" value="@Model.FullName">
    </div>
    
    <div style="display: flex; padding: 10px 0 10px 0">
        <div style="display: flex;">
            <label for="role" style="margin-right: 10px;">Role:</label>
            <select id="role" name="Role">
                @if (Model.Role == 1)
                {
                    <option value="1" selected)>Admin</option>
                    <option value="2" )>Employee</option>
                    <option value="3" )>Customer</option>

                }
                else if (Model.Role == 2)
                {
                    <option value="1" )>Admin</option>
                    <option value="2" selected)>Employee</option>
                    <option value="3" )>Customer</option>

                }
                else
                {
                    <option value="1" )>Admin</option>
                    <option value="2" )>Employee</option>
                    <option value="3" selected )>Customer</option>

                }

            </select>
        </div>

        <div style="display: flex; align-items: center;">
            <label for="isActive" style="margin-right: 10px;">Active:</label>
            @if (Model.IsActive == 1)
            {
                <input type="checkbox" id="isActive" name="IsActive" checked value="true">
            }
            else
            {
                <input type="checkbox" id="isActive" name="IsActive" value="true">
            }
        </div>
    </div>

    <div>
        <label for="image">Image:</label>
        <input type="text" id="image" name="Image" value="@Model.Image">
    </div>

    <input type="submit" value="Update Account">
</form>