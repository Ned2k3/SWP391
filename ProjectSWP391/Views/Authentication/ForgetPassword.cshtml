@using ProjectSWP391.Models
@model Account

<head>
    <title> Login </title>

</head>
<body>
    <center> <h1> Forget Password Form </h1> </center>

    <form action="/Authentication/ForgetPassword" method="post">
        <div class="container">
            <label>Email : </label>
            <input type="text" placeholder="Enter Email" asp-for="Email">
            <button type="submit">Sent Email</button>
            <a href="Login"><button type="button">Cancel</button></a>
            <label style=" font-size:medium;color:red">@ViewBag.ErrorMsg</label><br />
            @*  <input type="checkbox" style="display: none" asp-for="IsActive" checked="checked" />*@
        </div>
    </form>
</body>

