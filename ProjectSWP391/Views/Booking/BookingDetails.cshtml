@using ProjectSWP391.Models;
@model Booking

<body>
    @if (Model != null)
    {
        <div style="width: 50vw; margin-left: 25vw; margin-top: 20vh; background-color: white; box-shadow: 0px 16px 46px -22px rgba(0,0,0,0.75); border-radius: 5px;">
            <div class="row p-2">
                <div class="col-4">
                    <a href="/CustomerManagement/ServiceDetail?sId=@Model.Service.ServiceId" style="text-decoration: none;">
                        <div class="card h-100" style="flex-direction: unset; align-content: center; flex-wrap: wrap; justify-content: center;
                                        background-image: url('@(Model.Service.Image == null ? "https://dummyimage.com/450x300/dee2e6/6c757d.jpg" : Model.Service.Image)'); background-size: cover; background-position: center;">
                            <!-- Product details-->
                            <div style="background-color: rgb(0,0,0,0.4); width: 100%; height: 100%;">
                                <div class="card-body p-4" style="min-height: 100px; opacity: 1;">
                                </div>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-8">
                    <h4 style="text-align: center; padding: 5px 0 10px 0;">Booking Details</h4>
                    <table style="width: 100%; min-height: 200px; margin-bottom: 10px; border-radius: 5px;">
                        <tr>
                            @if (Model.CustomerId == 0)
                            {
                                <th>Customer Name:</th>
                                <td>Guest</td>
                            }
                            else
                            {
                                <th>Customer Email:</th>
                                <td>@Model.Customer.Email</td>
                            }
                        </tr>
                        <tr>
                            <th>Employee Name:</th>
                            <td>@Model.Employee.FullName</td>
                        </tr>
                        <tr>
                            <th>Service Name:</th>
                            <td>@Model.Service.ServiceName</td>
                        </tr>
                        <tr>
                            <th>Price:</th>
                            <td><span class="text-danger">$@(Math.Round(Model.Service.Price, 2))</span></td>
                        </tr>
                        <tr>
                            <th>Date:</th>
                            <td>@Model.BookingDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Time:</th>
                            <td>@(Model.Shift)h - @(Model.Shift + 1)h</td>
                        </tr>
                        @if(Model.CustomerId == 0)
                        {
                            <tr>
                                <th>Information:</th>
                                <td>@Model.Content</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    }
</body>
<style>
    body{
        background-image: url("https://inspirationhut.net/wp-content/uploads/2013/05/201.png");
        background-size: cover;
        background-position: center;
        padding-top: 0;
        font-size: 18px;
    }
    td,th,tr{
        padding: 10px 0 10px 0;
        text-align: center;
        font-size: 15px;
        border: 0.5px solid silver;
    }
    th{
        min-width: 30%;
    }
</style>
